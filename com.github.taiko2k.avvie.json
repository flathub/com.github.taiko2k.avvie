{
  "app-id": "com.github.taiko2k.avvie",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "command": "avvie",
  "finish-args": [
    "--share=ipc",
    "--device=dri",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--filesystem=xdg-pictures",
    "--filesystem=xdg-download",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "python3-piexif",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=${FLATPAK_DEST} ."
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/fa/84/a3f25cec7d0922bf60be8000c9739d28d24b6896717f44cc4cfb843b1487/piexif-1.1.3.zip",
          "sha256": "83cb35c606bf3a1ea1a8f0a25cb42cf17e24353fd82e87ae3884e74a302a5f1b"
        }
      ]
    },
    {
      "name": "python-pillow",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=${FLATPAK_DEST} ."
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/4b/83/090146d7871d90a2643d469c319c1d014e41b315ab5cf0f8b4b6a764ef31/Pillow-9.1.0.tar.gz",
          "sha256": "f401ed2bbb155e1ade150ccc63db1a4f6c1909d3d378f7d1235a44e90d75fb97"
        }
      ]
    },
    {
      "name": "avvie",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
           "type":"git",
           "url":"https://github.com/Taiko2k/avvie.git",
           "commit":"c2c6a931cdbd05fbcb0cbe95273da3b5a69f6e18"
        }
      ]
    }
  ]
}
